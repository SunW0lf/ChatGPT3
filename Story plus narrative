import random

def generate_story():
  # List of words and phrases to use in the story
  nouns = ["aliens", "starship", "galaxy", "wormhole", "time travel", "clones", "androids", "interdimensional beings", "rebellion", "empire", "black hole"]
  verbs = ["explore", "travel to", "battle", "encounter", "unite with", "save", "destroy", "overthrow", "conquer", "escape"]
  adjectives = ["mysterious", "futuristic", "advanced", "unfathomable", "powerful", "unstoppable", "corrupt", "oppressive"]
  
  # Keep track of the story so far
  story = ""
  
  # Generate a random science fiction story
  while True:
    # Add a new sentence to the story
    story += "In a distant " + random.choice(adjectives) + " " + random.choice(nouns) + ", a group of brave rebels set out to " + random.choice(verbs) + " the " + random.choice(adjectives) + " " + random.choice(nouns) + " of the " + random.choice(adjectives) + " " + random.choice(nouns) + ". "
    story += "As they journey through the stars aboard their " + random.choice(nouns) + ", they " + random.choice(verbs) + " numerous challenges and make unlikely allies, including a group of " + random.choice(adjectives) + " " + random.choice(nouns) + " and a rogue " + random.choice(nouns) + ". "
    
    # Reflect on the story so far
    if "rebellion" in story:
      story += "The rebellion is a long and difficult struggle, but the rebels are determined to bring down the corrupt empire and bring freedom to the galaxy. "
    if "wormhole" in story:
      story += "As they journey through the wormhole, the rebels are faced with unimaginable dangers and wonders. They must use all of their skills and resources to survive and emerge on the other side. "
    if "black hole" in story:
      story += "The rebels are drawn towards a powerful black hole, and must use all of their knowledge and technology to escape its deadly grasp. "
      
    # End the story if it's getting too long
    if len(story) > 1000:
      story += "And so, the rebels emerge victorious, having overthrown the empire and brought freedom and justice to the galaxy."
      break
  
  return story

# Generate and print a random science fiction story
print(generate_story())
